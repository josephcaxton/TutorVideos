<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:orientation="vertical"
  android:layout_width="match_parent" android:background="@drawable/background"
  android:layout_height="match_parent"
  android:id="@+id/LLHelpPage" xmlns:android="http://schemas.android.com/apk/res/android">
    
   <RelativeLayout   android:layout_width="match_parent" android:layout_height="wrap_content">

   <TextView
       android:id="@+id/txtHelpAd"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_marginLeft="16dp"
       android:layout_marginTop="20dp"
       android:text=""
       android:textColor="@color/black"
       android:textSize="@dimen/twentydp" />
  
   <Button
      android:id="@+id/btnReportProblem"
       android:layout_width="wrap_content"
       android:layout_height="80dp"
        android:layout_below="@+id/txtHelpAd" 
      android:text="@string/reportproblem" android:layout_alignParentLeft="true" android:layout_marginLeft="20dp" />
         
  </RelativeLayout>
</ScrollView>