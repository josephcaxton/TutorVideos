<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent" android:background="@drawable/background"
  android:layout_height="match_parent"
  android:id="@+id/LLYesNo">
  
  
  <WebView android:id="@+id/YQuestionHeaderBox" android:layout_width="match_parent" android:layout_height="460dp" 
    android:gravity="center" android:layout_weight="1" android:layout_alignParentTop="true">
    </WebView>
    
       <ScrollView android:id="@+id/scrollYesNoPg" 
     android:layout_width="match_parent"
     android:layout_height="wrap_content" android:layout_below="@+id/YQuestionHeaderBox">
     
     <RelativeLayout
            android:id="@+id/relativelayoutYesNo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
    
    <RadioGroup android:id="@+id/YradioGroup1" android:layout_height="wrap_content" 
    android:layout_below="@+id/YQuestionHeaderBox"  android:layout_marginTop="14dp" 
    android:layout_centerHorizontal="true" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_marginRight="33dp">
    
        <RadioButton android:id="@+id/YYes" android:text="Yes" android:layout_height="wrap_content" android:checked="false"  
        android:layout_width="wrap_content" ></RadioButton>
        <ImageView android:id="@+id/YImage1"  android:layout_width="wrap_content" android:layout_height="wrap_content" 
     android:layout_alignLeft="@+id/YYes"  ></ImageView>
        
        <RadioButton android:id="@+id/YNo" android:layout_width="wrap_content" android:text="NO" android:checked="false"  android:layout_height="wrap_content" 
         android:layout_marginLeft="120dp"></RadioButton>
        <ImageView android:id="@+id/YImage2"  android:layout_width="wrap_content" android:layout_height="wrap_content" 
     android:layout_alignLeft="@+id/YNo"  ></ImageView>
      
    </RadioGroup>
    
    
    <Button android:layout_width="220dp" android:layout_height="80dp"  
    android:id="@+id/YContinue" android:text="Continue" android:layout_marginRight="10dp" 
    android:layout_weight="1"  android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_below="@+id/YradioGroup1">
    </Button>
    
        <Button android:layout_width="220dp" android:layout_height="80dp"  
    android:id="@+id/YesNoShowReason" android:text="Reason" android:layout_marginLeft="10dp" 
    android:layout_weight="1"  android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_below="@+id/YradioGroup1">
    </Button>
    
     </RelativeLayout>
		
	 </ScrollView>
	 
</RelativeLayout>
